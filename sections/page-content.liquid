<section id="section-{{ section.id }}">
  <div class="Container">
  {%- for block in section.blocks -%}
    <div class="Page_Content Content__Block--{{ block.type }}" {{ block.shopify_attributes }}>
      {%- case block.type -%}
        {%- when 'text' -%}
      
          {%- if block.settings.title != blank -%}
    	    <div class="SectionHeader SectionHeader--center">
              <h2 class="SectionHeader__Heading Heading u-h2">{{ block.settings.title | escape }}</h2>
      	    </div>
          {%- endif -%}

          {%- if block.settings.content != blank -%}
             <div class="Rte">                   
               {{ block.settings.content }} 
             </div>
          {%- endif -%}
      
       {%- endcase -%}
    </div>
  {%- endfor -%}
  </div>
</section>


{% schema %}
  {
    "name": "Page Content",
    "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Section Content",
      "settings": [
    	{
      	  "type": "color",
          "id": "background",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Section Header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>Use this text area to tell your story.</p>"
        }
        ]
      }
    ]
  } 
{% endschema %}

{% stylesheet %}

<style>
  .Page_Content {
    border-bottom: 1px solid #B1B1B1;
  }
  .Page_Content:first-of-type {
    padding-top: 50px;
  }
  .Page_Content:last-of-type {
    padding-bottom: 50px;
    border-bottom: none;
  }
  .Page_Content {
    max-width: 1000px;
    padding: 30px;
    margin: 0 auto;
    text-align: justify;
  }
  #section-custom-page-section-1 .SectionHeader {
    margin-bottom: 25px;
  }

  #section-custom-page-section-1 .Container {
    margin: 0 auto;
    padding: 40px 0;
    background-color: {{ block.settings.background }}
  }
  
</style>

{% endstylesheet %}

