{%- for block in section.blocks -%}
  <div class="Footer__Block Footer__Block--{{ block.type }}" {{ block.shopify_attributes }}>
    {%- case block.type -%}
      {%- when 'text' -%}
        {%- if block.settings.title != blank -%}
           <h2 class="SectionHeader__Heading Heading u-h2">{{ block.settings.title | escape }}</h2>
                {%- endif -%}

                {%- if block.settings.content != blank -%}
                  <div class="Footer__Content Rte">                   

                    {{ block.settings.content }}
                    
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}



{% schema %}
  {
    "name": "Page Content",
    "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Section Content",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Section Header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>Use this text area to tell your customers about your brand and vision. You can change it in the theme settings.</p>"
        }
        ]
      }
    ]
  } 
{% endschema %}

{% stylesheet %}

<style>
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
  }
</style>

{% endstylesheet %}

