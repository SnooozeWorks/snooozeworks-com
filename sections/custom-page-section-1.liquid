<section id="section-{{ section.id }}">
  <div class="Container" style="{{ block.settings.background }}">
  {%- for block in section.blocks -%}
    <div class="Page_Content Content__Block--{{ block.type }}" {{ block.shopify_attributes }}>
      {%- case block.type -%}
        {%- when 'text' -%}
      
          {%- if block.settings.title != blank -%}
    	    <div class="SectionHeader SectionHeader--center">
              <h2 class="SectionHeader__Heading Heading u-h2">{{ block.settings.title | escape }}</h2>
      	    </div>
          {%- endif -%}

          {%- if block.settings.content != blank -%}
             <div class="Rte">                   
               {{ block.settings.content }} 
             </div>
          {%- endif -%}
      
       {%- endcase -%}
    </div>
  {%- endfor -%}
  </div>
</section>


{% schema %}
  {
    "name": "Page Content",
    "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "Section Content",
      "settings": [
    	{
      	  "type": "color",
          "id": "background",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Section Header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>Use this text area to tell your customers about your brand and vision. You can change it in the theme settings.</p>"
        }
        ]
      }
    ]
  } 
{% endschema %}

{% stylesheet %}

<style>
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
  }
</style>

{% endstylesheet %}

