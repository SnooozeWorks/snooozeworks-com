
<section class="Section" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="page-content-block">
  <div class="PageSection_1">
    <div class="Section_H1 slideanim">{{ section.settings.title }}</div>
      <div class="Section_Paragraph slideanim">
        {{ section.settings.content }}
      </div>
  </div>
</section>


		{%- for block in section.blocks -%}
          <div class="Footer__Block Footer__Block--{{ block.type }}" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'text' -%}
                {%- if block.settings.title != blank -%}
                  {% comment %}<h2 class="Footer__Title Heading u-h6">{{ block.settings.title | escape }}</h2>{% endcomment %}
                {%- endif -%}

                {%- if block.settings.content != blank -%}
                  <div class="Footer__Content Rte">                   

                    {{ block.settings.content }}
                    
                  </div>
                {%- endif -%}
            {%- endcase -%}
          {%- endfor -%}



{% schema %}
  {
    "name": "Page Content",
    "settings": [
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Section Content",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Section Header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>Use this text area to tell your customers about your brand and vision. You can change it in the theme settings.</p>"
        }
        ]
      }
    ]
  } 
{% endschema %}

{% stylesheet %}

<style>
  #section-{{ section.id }} {
    background: {{ section.settings.background }};
  }
</style>

{% endstylesheet %}

