{%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'header' -%}
      {%- include 'accounts-header' -%}
    {%- endcase -%}
{%- endfor -%}

{% schema %}
  {
    "name": "Page Header",
    "settings": [],
  	"blocks": [
    {
      "type": "header",
      "name": "Section Header",
      "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Show Banner Image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "apply_overlay",
      "label": "Apply overlay on image",
      "info": "This can improve text visibility.",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Image",
      "info": "Banner Image"
    },
    {
      "type": "select",
      "id": "banner_size",
      "label": "Banner image size",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "normal"
    }
        ]
      }
    ]
  } 
{% endschema %}
