{% for block in section.blocks %}
    {% case block.type %}
        {% when 'text' %}
        {% include 'page-content' %}
        {% when 'video' %}
        {% include 'video-on-page' %}
    {% endcase %}
{% endfor %}

{% schema %}
{
"blocks": [
{
  "type": "text",
  "name": "Rich text",
  "settings": [
	    	{
      	  "type": "color",
          "id": "background",
          "label": "Background Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Section Header"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>Use this text area to tell your story.</p>"
        }
]
},
{
  "type": "video",
  "name": "Full Width YouTube Video",
  "settings": [
    {
      "type": "text",
      "id": "videoID",
      "label": "Video ID",
      "default": "Enter Video ID Here"
    }
  ]
}
]
}
{% endschema %}