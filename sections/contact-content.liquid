<section id="section-{{ section.id }}">
  <div class="Container">
  {%- for block in section.blocks -%}
    <div class="Page_Content Page_Content--{{ block.type }}" {{ block.shopify_attributes }}>
      {%- case block.type -%}
        {%- when 'text' -%}
      	  {%- include 'contact-form' -%}
       {%- endcase -%}
    </div>
  {%- endfor -%}
  </div>
</section>


{% schema %}
  {
    "name": "Page Content",
    "settings": [],
  	"blocks": [
    {
      "type": "text",
      "name": "Text field",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Custom field"
        },
        {
          "type": "checkbox",
          "id": "use_long_text",
          "label": "Use long text",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "is_required",
          "label": "Field is required",
          "default": false
        }
      ]
    },
    {
      "type": "dropdown",
      "name": "Dropdown",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Name",
          "default": "Custom field"
        },
        {
          "type": "text",
          "id": "values",
          "label": "Values",
          "info": "Separate each value by a comma.",
          "default": "value 1, value 2, value 3"
        }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}

<style>

  #section-{{ section.id }} .Container {
    margin: 0 auto;
    padding: 40px;
  }
  .Page_Content {
    max-width: 1000px;
    padding: 40px 25px;
    margin: 0 auto;
    text-align: justify;
    border-bottom: 1px #B1B1B1 solid;
  }
  .Page_Content:first-of-type {
    padding-top: 50px;
  }
  .Page_Content:last-of-type {
    padding-bottom: 50px;
    border-bottom: none;
  }
  
</style>

{% endstylesheet %}

