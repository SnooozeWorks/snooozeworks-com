{%- if section.settings.show_section -%}
<section id="section-{{ section.id }}">
  <div class="Container">
    <div class="Page_Content Page_Content--normal">    
     
      {%- if section.settings.title != blank -%}
      <div class="SectionHeader--center" style="margin-bottom: 25px;">
         <h2 class="SectionHeader__Heading Heading u-h2">{{ section.settings.title | escape }}</h2>
      </div>
	  {%- endif -%}
      
	  <div class="Grid Grid--center">
        <div class="Grid__Cell 1/1--pocket 1/2--lap-and-up" style="text-align: center;">
       	  <img src="{{ section.settings.primary | img_url: '500x' }}" alt"{{ shop.name }}" />
        </div>
        <div class="Grid__Cell 1/1--pocket 1/2--lap-and-up" style="text-align: center;">
       	  <img src="{{ section.settings.alternate | img_url: '500x' }}" alt"{{ shop.name }}" />
        </div>
      </div>   
    </div>
  </div>
</section>
{%- endif -%}

{% schema %}
{
  "name": "Brand Colors",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Colors"
    },
	{
	  "type": "header",
	  "content": "Logos"
	},
    {
      "type": "image_picker",
      "id": "primary",
      "label": "Primary Logo",
      "info": "Set default logo."
    },
    {
      "type": "image_picker",
      "id": "alternate",
      "label": "Alternate Logo",
      "info": "Set alternate logo."
    }
  ]
}
{% endschema %}

