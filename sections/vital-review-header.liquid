{%- if section.settings.show_section -%}
  {% if product.metafields.reviews.rating_count == 0 %}
  <section class="Section" data-section-id="{{ section.id }}" data-section-type="vital-review-header" data-section-settings='{{ section_settings }}'>
    {%- if section.settings.heading != blank -%}
      <header class="SectionHeader SectionHeader--custom">
          <h2 class="SectionHeader__Heading Heading u-h2 SectionHeader--AddLine">{{ section.settings.heading | escape }}</h2>
      </header>
    {%- endif -%}
  </section>
  {% endif %}

      <div id="bundle-product_reviews"></div>

{%- endif -%}


{% schema %}
  {
    "name": "Reviews",
    "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customer Reviews"
    }]
  }
{% endschema %}

