{%- if section.settings.show_section -%}

  <section class="Section Section--spacingNormal Container--narrow" data-section-id="{{ section.id }}" data-section-type="vital-review-header" data-section-settings='{{ section_settings }}'>
    {%- if section.settings.heading != blank -%}
      <header class="SectionHeader">
        <div class="Container">
          <h2 class="SectionHeader__Heading Heading u-h2">{{ section.settings.heading | escape }}</h2>
        </div>
      </header>
    {%- endif -%}

    <div id="bundle-product_reviews"></div>
    
  </section>

{%- endif -%}


{% schema %}
  {
    "name": "Reviews",
    "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Customer Reviews"
    }]
  }
{% endschema %}

