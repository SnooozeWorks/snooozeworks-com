{%- if section.settings.show_section -%}
<section id="section-{{ section.id }}">
  <div class="Container">
    <div class="Page_Content Page_Content--normal">        
	  <div class="Grid Grid--center">
        <div class="Grid__Cell 1/2--pocket 1/4--lap-and-up">
       	  <div class="brand-primary"></div>
        </div>
        <div class="Grid__Cell 1/2--pocket 1/4--lap-and-up">
       	  <div class="brand-secondary"></div>
        </div>
        <div class="Grid__Cell 1/2--pocket 1/4--lap-and-up">
       	  <div class="brand-black"></div>
        </div>
        <div class="Grid__Cell 1/2--pocket 1/4--lap-and-up">
       	  <div class="brand-white"></div>
        </div>
      </div>   
    </div>
  </div>
</section>
{%- endif -%}

{% schema %}
{
  "name": "Brand Colors",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show Section",
      "default": true
    }
  ]
}
{% endschema %}
{% stylesheet %}

.brand-primary {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: #ef3340;
  border: 1px solid #000;
}
.brand-secondary {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: #FFFEF1;
  border: 1px solid #000;
}
.brand-black {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: #1f1f1e;
  border: 1px solid #000;
}
.brand-white {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  background: #f9f9f9;
  border: 1px solid #000;
}
{% endstylesheet %}

