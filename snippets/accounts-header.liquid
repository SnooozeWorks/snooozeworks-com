{%- if block.settings.show_banner -%}
  <div class="FlexboxIeFix">
    <header class="PageHeader PageHeader--withBackground {% if block.settings.banner_size != 'normal' %}PageHeader--{{ block.settings.banner_size }}{% endif %}" style="background: url({{ block.settings.banner_image | img_url: '1x1', format: 'webp' }})">
      <div class="PageHeader__ImageWrapper Image--lazyLoad Image--fadeIn {% if block.settings.apply_overlay %}Image--contrast{% endif %}" data-optimumx="1.2" data-bgset="{{ block.settings.banner_image | img_url: 'x600' }} 600w, {{ block.settings.banner_image | img_url: '800x' }} 800w, {{ block.settings.banner_image | img_url: '1200x' }} 1200w, {{ block.settings.banner_image | img_url: '1400x' }} 1400w, {{ block.settings.banner_image | img_url: '1600x' }} 1600w"></div>

    <noscript>
      <div class="PageHeader__ImageWrapper {% if block.settings.apply_overlay %}Image--contrast{% endif %}" style="background-image: url({{ block.settings.banner_image | img_url: '800x' }})"></div>
    </noscript>

      <div class="Container">
        <div class="SectionHeader SectionHeader--center">
          <h1 class="SectionHeader__Heading Heading collection-h1" style="text-shadow: 2px 3px 3px #000; letter-spacing: 2px; text-transform: uppercase; font-weight: 700;">{{ block.settings.heading }}</h1>
         
            <div class="SectionHeader__Heading Heading u-h4" style="letter-spacing: 1px; text-shadow: 2px 3px 3px #000;">
              {{ 'customer.account.welcome' | t: first_name: customer.first_name }}<br />
            <button type="submit" class="PageHeader__Back Button Button--primary">{{ 'customer.account.logout' | t }}</button></p></div>
            </div>
              
        </div>
      </div>
    </header>
	</div>
    
	{%- else -%}

    <header class="PageHeader">
      <div class="Container">
        <div class="SectionHeader SectionHeader--center">
          <h1 class="SectionHeader__Heading Heading u-h1">{{ block.settings.heading }}</h1>

            {%- if collection.description != blank -%}
              <div class="SectionHeader__Description Rte">
                {{- block.settings.subheading -}}
              </div>
            {%- endif -%}
        </div>
      </div>
    </header>
{%- endif -%}
