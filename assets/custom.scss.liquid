// Mega Menu Styling

.MegaMenu__Inner {
  justify-content: flex-start !important;
  max-width: 100%;
}

.MegaMenu__Item {
  margin: 20px 0;
  padding: 0 40px;
  min-width: 15%;
}

.MegaMenu__Item:first-of-type {
  border-right: 1px solid #ffffe1;
  padding-right: 80px;
  align-self: stretch;
  min-width: 10%;
  width: 15%;
}

.MegaMenu__Item:nth-of-type(2) {
  padding-left: 80px;
}

.MegaMenu__Item:nth-of-type(4) {
  flex-grow: 1;
}

// Hides Browse All on Patents and Patent Mugs Menus

nav .HorizontalList__Item:first-of-type .MegaMenu__Inner .MegaMenu__Item:nth-of-type(3) .MegaMenu__Title {
  visibility: hidden;
}

nav .HorizontalList__Item:nth-of-type(3) .MegaMenu__Inner .MegaMenu__Item:nth-of-type(3) .MegaMenu__Title {
  visibility: hidden;
}



// Featured Product Section

.featured_product_title {
  display: inline-block;
  width: 65%;
  text-align: left;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden; 
}

.featured_product_meta {
  display: inline-block;
  width: 35%;
  text-align: right;
  vertical-align: top;
  margin-top: 0 !important;
}

@include av-mq('pocket') {
  .featured_product_title {
    display: block;
    width: 100%;
    text-align: center;
  }
  
  .featured_product_meta {
    display: none;
  }
}

.product__aside {
  letter-spacing: 0.5px;
  font-weight: 500px;
}

.shopify-section--bordered>.Section--spacingNormal {
  padding-top: 40px !important;
}

.SectionHeader__Description {
  text-align: justify;
  text-align-last: center;
}

// Sales Notification Popup

.sn-info-wrapper a {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 95%;
}

// Misc

 .Newsletter__Inner .Form__Input:focus::placeholder {
  color: transparent;
   
}.Drawer__Main::-webkit-scrollbar {
  width: 0px;
  background: transparent;
}