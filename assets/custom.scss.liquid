//*** -- Mega Menu Styling -- ***//

.MegaMenu__Inner {
  justify-content: flex-start !important;
  max-width: 100%;
}

.MegaMenu__Item {
  margin: 20px 0;
  padding: 0 40px;
  min-width: 15%;
}

.MegaMenu__Item:first-of-type {
  border-right: 1px solid #ffffe1;
  padding-right: 80px;
  align-self: stretch;
  min-width: 10%;
  width: 15%;
}

.MegaMenu__Item:nth-of-type(2) {
  padding-left: 80px;
}

.MegaMenu__Item:nth-of-type(4) {
  flex-grow: 1;
}

// Hides Browse All on Patents and Patent Mugs Menus

nav .HorizontalList__Item:first-of-type .MegaMenu__Inner .MegaMenu__Item:nth-of-type(3) .MegaMenu__Title {
  visibility: hidden;
}

nav .HorizontalList__Item:nth-of-type(3) .MegaMenu__Inner .MegaMenu__Item:nth-of-type(3) .MegaMenu__Title {
  visibility: hidden;
}

/*** -- Featured Collections -- ***/

.ProductItem__Info .ProductItem__Title {
  width: 60%;
  letter-spacing: 0.5px;
  text-align: left;
  display: inline-block;
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden; 
}

.ProductItem__Info .ProductItem__PriceList {
  width: 40%;
  display: inline-block;
  vertical-align: top;
  text-align: right;
  letter-spacing: 0;
}

.sub-title {
  color: #8d8d8d;
  font-family: $text-font-family;
  font-weight: normal;
  overflow: hidden;
  display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  font-size: 13px;
  letter-spacing: 0.5px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden; 
}

.coming-soon {
  width: 40%;
  display: inline-block;
  vertical-align: top;
  text-align: right;
  letter-spacing: 0;
}

@include av-mq('phone'){
  .ProductItem__Info .ProductItem__Title {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden; 
    font-size: to-size(11);
  }
}

@include av-mq('phone'){
  .ProductItem__Info .ProductItem__PriceList {
    font-size: to-size(11);
  }
}

@include av-mq('phone') {
	.Footer__Block--links {
      display:none;
    }

	.Footer__Block--newsletter {
      display:none;
    }

	.Footer__Block--text {
      text-align: justify;
      margin-top: -20px;
      padding-bottom: 20px;
    }
}
